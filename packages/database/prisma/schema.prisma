generator client {
  provider = "prisma-client-js"
  output   = "./../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id   @default(uuid())
  username  String 
  password  String
  todos     Todo[]
}

model Todo {
  id          String      @id   @default(uuid())
  title       String
  description String
  isCompleted Boolean
  userId      String
  user        User        @relation(fields: [userId], references: [id])
}
